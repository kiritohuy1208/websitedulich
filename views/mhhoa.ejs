
   <% if(useData.length !=0){
    
    useData.forEach(function(data){%>
       
        <div class="d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
            <a href='/hoa/chitiet/<%= data.mahoa%>'>
                <img src="<%= data.fileLinks[0]%>" class="card-img-top" alt="<%= data.tenhoa%>">
         </a>
          
            <div class="card-body">
            <h5 class="card-title"><%= data.tenhoa%></h5>
            <p class="card-text"><%= data.giaban%></p>
            <a href="/shoppingcart/addtocart/<%= data.id%>" class="btn btn-primary">Add to cart</a>
            <%if(user.role == 1){%>
            <a href="/admin/edit/<%=data.id%>">
                <button class='btn btn-dark'>
                        <i class="far fa-edit"></i>
            </button>
            </a>
                <form action="/admin/delete/<%=data.id%>?_method=DELETE" method="POST">
                    <button style="margin-top: 10px;" onclick="return confirm('Bạn muốn xóa sp <%=data.tenhoa%> ?')"  class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            <%}%>
            </div>
        
        </div>
        </div>
       


<%})} else{%>
   <tr>
       <td colspan="7">No data Found</td>
   </tr>
   <%}%>

  