<div class="container">
   
    <div class="row">
      <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
          <span class="text-muted">Your cart</span>
          <span class="badge badge-secondary badge-pill">3</span>
        </h4>
        <ul class="list-group mb-3">
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Product name</h6>
              <small class="text-muted">Brief description</small>
            </div>
            <span class="text-muted">$12</span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Second product</h6>
              <small class="text-muted">Brief description</small>
            </div>
            <span class="text-muted">$8</span>
          </li>
          <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
              <h6 class="my-0">Third item</h6>
              <small class="text-muted">Brief description</small>
            </div>
            <span class="text-muted">$5</span>
          </li>
          <li class="list-group-item d-flex justify-content-between bg-light">
            <div class="text-success">
              <h6 class="my-0">Promo code</h6>
              <small>EXAMPLECODE</small>
            </div>
            <span class="text-success">-$5</span>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Total (USD)</span>
            <strong>$20</strong>
          </li>
        </ul>

        <form class="card p-2">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Promo code">
            <div class="input-group-append">
              <button type="submit" class="btn btn-secondary">Redeem</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Thanh toán</h4>
        <form class="needs-validation" method='POST' action="/xulydonhang" novalidate>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="firstName">Họ tên khách hàng</label>
              <input type="text" name ="hoten"class="form-control" id="firstName" placeholder="" value="<%= user.hoten%>" required>
              <div class="invalid-feedback">
                Yêu cầu
              </div>
            </div>
         
          </div>

          <!-- <div class="mb-3">
            <label for="username">Username</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">@</span>
              </div>
              <input type="text" class="form-control" id="username" placeholder="Username" required>
              <div class="invalid-feedback" style="width: 100%;">
                Your username is required.
              </div>
            </div>
          </div> -->

          <div class="mb-3">
            <label for="email">Email <span class="text-muted"></span></label>
            <input type="email" name="email" class="form-control"  value ="<%= user.email%>" id="email" placeholder="you@example.com">
            <div class="invalid-feedback">
              Please enter a valid email address for shipping updates.
            </div>
          </div>

          <div class="mb-3">
            <label for="address">Địa chỉ</label>
            <input type="text" class="form-control" name="diachi" value="<%= user.diachi%>" id="address" placeholder="1234 Main St" required>
            <div class="invalid-feedback">
              Please enter your shipping address.
            </div>
          </div>

         

         
          <div class="row">
           
            <div class="col-md-6 mb-3">
              <label for="cc-number">Số điện thoại</label>
              <input type="text" name="dienthoai" class="form-control" id="cc-number" value="<%= user.dienthoai%>" placeholder="" required>
              <div class="invalid-feedback">
                Credit card number is required
              </div>
            </div>
          </div>
         
          <hr class="mb-4">
          <button class="btn btn-primary btn-lg btn-block" type="submit">Thanh toán </button>
        </form>
        <% if(locals.message.success){%>
          <div class="alert alert-success" style="margin-top: 10px; " role="alert">
            <%= message.success %>
    
          </div>
          <%}%>
      
        <% if(locals.message.error){%>
        <div class="alert alert-danger" style="margin-top: 10px;" role="alert">
            <%= message.error %>
          </div>
        <%}%>
      </div>
     
    </div>

   
  </div>

  <script src="https://js.stripe.com/v3/"></script>